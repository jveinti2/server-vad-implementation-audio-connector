# Variables de entorno para la configuración de Audio Connector

# Selección de proveedores
# Opciones para ASR_PROVIDER: "vad" (usa Whisper con VAD) o "aws" (usa AWS Transcribe)
ASR_PROVIDER=vad

# Opciones para TTS_PROVIDER: "elevenlabs", "openai" o "aws-polly"
TTS_PROVIDER=

# Opciones para LLM_PROVIDER: Actualmente solo "openai"
LLM_PROVIDER=

# API Keys
OPENAI_API_KEY=""
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION=""
ELEVENLABS_API_KEY=""
ELEVENLABS_AGENT_ID="" # Reemplazar con el ID real del agente

# Voces específicas para cada proveedor TTS
AWS_POLLY_VOICE="Mia"
OPENAI_VOICE="nova"
ELEVENLABS_VOICE="Mimi"

# Puerto del servidor
PORT=8001

# Configuración antigua (mantenida para compatibilidad)
USE_VAD=true